<?xml version="1.0"?>
<ruleset>
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="80"/>
    <arg name="cache" value=".phpcs-cache"/>
    <arg name="colors"/>

    <!-- Ignore warnings and show progress of the run -->
    <arg value="nps"/>

    <file>bin</file>
    <file>src</file>
    <file>tests</file>

    <exclude-pattern>*/tests/example/vendor/*</exclude-pattern>

    <rule ref="Doctrine" />
</ruleset>

